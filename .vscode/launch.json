    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach by Process ID",
        "processId": "${command:PickProcess}",
        "request": "attach",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node"
      },
      {
        "name": "Launch via NPM",
        "request": "launch",
        "runtimeArgs": [
          "run-script",
          "debug"
        ],
        "runtimeExecutable": "npm",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Launch Program",
        "preLaunchTask": "npm: start",
        "sourceMaps": true,
        "smartStep": true,
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ]
      },
      {
        "name": "Attach to Node Functions",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "preLaunchTask": "func: host start"
      }
    ]
}
